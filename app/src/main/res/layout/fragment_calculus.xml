<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/res/layout/fragment_calculus.xml -->
<!-- 微积分计算器布局 - 整体可滚动 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/primary">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/btn_back"
            app:tint="@color/text_white" />

        <TextView
            android:id="@+id/tv_calculus_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/calculus_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginStart="8dp" />

        <ImageButton
            android:id="@+id/btn_show_steps"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_info_details"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/btn_show_steps"
            app:tint="@color/text_white" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="false"
        android:background="@color/display_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/display_hint"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:gravity="end|bottom"
                    android:padding="16dp"
                    android:minHeight="120dp"
                    android:background="@drawable/display_border" />

                <com.mathsnew.mathsnew.calculus.graph.CalculusGraphView
                    android:id="@+id/graph_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:minHeight="400dp"
                    android:background="@color/display_background" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@color/background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <Button
                        android:id="@+id/btn_clear"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="2.5"
                        android:layout_margin="4dp"
                        android:text="@string/btn_clear"
                        android:textSize="18sp"
                        android:padding="0dp"
                        android:textColor="@color/key_operation_text"
                        android:backgroundTint="@color/key_operation" />

                    <Button
                        android:id="@+id/btn_backspace"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="2.5"
                        android:layout_margin="4dp"
                        android:text="⌫"
                        android:textSize="24sp"
                        android:padding="0dp"
                        android:textColor="@color/key_operation_text"
                        android:backgroundTint="@color/key_operation" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_sin"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="@string/key_sin"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_function_text"
                        android:backgroundTint="@color/key_function" />

                    <Button
                        android:id="@+id/btn_cos"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="@string/key_cos"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_function_text"
                        android:backgroundTint="@color/key_function" />

                    <Button
                        android:id="@+id/btn_tan"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="@string/key_tan"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_function_text"
                        android:backgroundTint="@color/key_function" />

                    <Button
                        android:id="@+id/btn_ln"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="@string/key_ln"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_function_text"
                        android:backgroundTint="@color/key_function" />

                    <Button
                        android:id="@+id/btn_log"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="@string/key_log"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_function_text"
                        android:backgroundTint="@color/key_function" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_sqrt"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="@string/key_sqrt"
                        android:textSize="20sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_function_text"
                        android:backgroundTint="@color/key_function" />

                    <Button
                        android:id="@+id/btn_power"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="@string/key_power"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_function_text"
                        android:backgroundTint="@color/key_function" />

                    <Button
                        android:id="@+id/btn_abs"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="@string/key_abs"
                        android:textSize="16sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_function_text"
                        android:backgroundTint="@color/key_function" />

                    <Button
                        android:id="@+id/btn_left_paren"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="("
                        android:textSize="20sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_function_text"
                        android:backgroundTint="@color/key_function" />

                    <Button
                        android:id="@+id/btn_right_paren"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text=")"
                        android:textSize="20sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_function_text"
                        android:backgroundTint="@color/key_function" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_7"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="7"
                        android:textSize="20sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_number_text"
                        android:backgroundTint="@color/key_number" />

                    <Button
                        android:id="@+id/btn_8"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="8"
                        android:textSize="20sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_number_text"
                        android:backgroundTint="@color/key_number" />

                    <Button
                        android:id="@+id/btn_9"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="9"
                        android:textSize="20sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_number_text"
                        android:backgroundTint="@color/key_number" />

                    <Button
                        android:id="@+id/btn_multiply"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="×"
                        android:textSize="24sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_function_text"
                        android:backgroundTint="@color/key_function" />

                    <Button
                        android:id="@+id/btn_divide"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="÷"
                        android:textSize="24sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_function_text"
                        android:backgroundTint="@color/key_function" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_4"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="4"
                        android:textSize="20sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_number_text"
                        android:backgroundTint="@color/key_number" />

                    <Button
                        android:id="@+id/btn_5"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="5"
                        android:textSize="20sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_number_text"
                        android:backgroundTint="@color/key_number" />

                    <Button
                        android:id="@+id/btn_6"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="6"
                        android:textSize="20sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_number_text"
                        android:backgroundTint="@color/key_number" />

                    <Button
                        android:id="@+id/btn_add"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="+"
                        android:textSize="24sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_function_text"
                        android:backgroundTint="@color/key_function" />

                    <Button
                        android:id="@+id/btn_subtract"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="-"
                        android:textSize="24sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_function_text"
                        android:backgroundTint="@color/key_function" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_1"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="1"
                        android:textSize="20sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_number_text"
                        android:backgroundTint="@color/key_number" />

                    <Button
                        android:id="@+id/btn_2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="2"
                        android:textSize="20sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_number_text"
                        android:backgroundTint="@color/key_number" />

                    <Button
                        android:id="@+id/btn_3"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="3"
                        android:textSize="20sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_number_text"
                        android:backgroundTint="@color/key_number" />

                    <Button
                        android:id="@+id/btn_pi"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="@string/key_pi"
                        android:textSize="20sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_number_text"
                        android:backgroundTint="@color/key_number" />

                    <Button
                        android:id="@+id/btn_e"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="exp"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_function_text"
                        android:backgroundTint="@color/key_function" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_0"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="0"
                        android:textSize="20sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_number_text"
                        android:backgroundTint="@color/key_number" />

                    <Button
                        android:id="@+id/btn_dot"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="."
                        android:textSize="24sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_number_text"
                        android:backgroundTint="@color/key_number" />

                    <Button
                        android:id="@+id/btn_x"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="@string/key_x"
                        android:textSize="20sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_number_text"
                        android:backgroundTint="@color/key_number" />

                    <Button
                        android:id="@+id/btn_placeholder1"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text=""
                        android:enabled="false"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/btn_placeholder2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text=""
                        android:enabled="false"
                        android:visibility="invisible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btn_derivative"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="2.5"
                        android:layout_margin="4dp"
                        android:text="@string/btn_derivative"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_calculate_text"
                        android:backgroundTint="@color/key_calculate" />

                    <Button
                        android:id="@+id/btn_integral"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="2.5"
                        android:layout_margin="4dp"
                        android:text="@string/btn_integral"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/key_calculate_text"
                        android:backgroundTint="@color/key_calculate" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
